<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sample.sample.dao.SampleDao">
	
	<!-- ================================
		@name selectSampleQuery
		@param 
		@result com.sample.sample.vo.response.SampleResponseVO
		@author JB
		@since 16.04.12
		@description select sample query 
	==================================== -->
	<select id="selectSampleQuery" resultType="com.sample.sample.vo.response.SampleResponseVO">
		SELECT sysdate() as today;
	</select>
	
	<!-- ================================
		@name selectSampleQuery
		@param 
		@result com.sample.sample.vo.response.LombokResponseVO
		@author JB
		@since 16.07.04
		@description select sample query 
	==================================== -->
	<select id="selectLombokQuery" resultType="com.sample.sample.vo.response.LombokResponseVO">
		SELECT sysdate() as today;
	</select>
	
	<!-- ================================
		@name selectDataQuery
		@param 
		@result com.sample.sample.vo.response.SampleDataResponseVO
		@author JB
		@since 16.07.05
		@description select sample Data query 
	==================================== -->
	<select id="selectDataQuery" parameterType="com.sample.sample.vo.request.SampleDataRequestVO" resultType="com.sample.sample.vo.response.SampleDataResponseVO">
		SELECT * FROM sample limit ${nextRows}, ${visiblePage}
	</select>
	
	<!-- ================================
		@name selectTotalDataQuery
		@param 
		@result com.sample.sample.vo.response.SamplePagingVO
		@author JB
		@since 16.07.05
		@description select totalRows 
	==================================== -->
	<select id="selectTotalRows" parameterType="com.sample.sample.vo.request.SampleDataRequestVO" resultType="int">
		SELECT count(*) as totalRows FROM sample
	</select>
</mapper>